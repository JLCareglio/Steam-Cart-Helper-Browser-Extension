{
  "manifest_version": 3,
  "name": "Steam Cart Helper",
  "short_name": "SCH",
  "version": "0.7",
  "description": "ðŸ›’ ExtensiÃ³n que te ayuda a ahorrar tiempo agregando funcionalidades al carrito de compras de Steam",
  "short_description": "ðŸ›’ AÃ±ade funcionalidades al carrito de compras de Steam",
  "homepage_url": "https://github.com/JLCareglio/Steam-Cart-Helper-chromium-extension",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "author": "JesÃºs Lautaro Careglio Albornoz",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://store.steampowered.com/*",
    "https://steamcommunity.com/*"
  ],
  "background": { "service_worker": "scripts/background.js" },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["scripts/savePurchaseIds_inject.js"]
    },
    {
      "matches": ["https://store.steampowered.com/cart*"],
      "js": ["scripts/cartManager_inject.js"]
    },
    {
      "matches": ["https://steamcommunity.com/login*sch=1*"],
      "js": ["scripts/connectPopup_inject.js"],
      "run_at": "document_start"
    }
  ]
}

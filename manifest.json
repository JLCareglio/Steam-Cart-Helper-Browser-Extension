{
  "manifest_version": 3,
  "name": "Steam Cart Helper",
  "version": "1.0",
  "description": "ðŸ›’ ExtensiÃ³n que te ayuda a ahorrar tiempo y dinero agregando funcionalidades al carrito de compras de Steam",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://store.steampowered.com/*",
    "https://steamcommunity.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["scripts/savePurchaseIds.js"]
    },
    {
      "matches": ["https://store.steampowered.com/cart*"],
      "js": ["scripts/cartManager.js"]
    },
    {
      "matches": [
        "https://steamcommunity.com/profiles/*/friends*sch=1*",
        "https://steamcommunity.com/id/*/friends*sch=1*"
      ],
      "js": ["scripts/saveUserGames.js"],
      "run_at": "document_start"
    }
  ]
}
